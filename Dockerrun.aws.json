{
    "AWSEBDockerrunVersion":2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "prasunmax/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "prasunmax/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "prasunmax/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "prasunmax/multi-nginx",
            "hostname": "nginx",
            "essential": true, 
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort":80
                }
            ],
            "links":["client", "server"]
        }
    ]
}